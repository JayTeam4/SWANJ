<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.simonsays"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_simon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:background= "@color/white">
        <activity
            android:name="com.example.simonsays.android.view.MainActivity"
            android:label="@string/app_name" 
            android:background= "@color/white">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.simonsays.android.view.ConfigActivity"
            android:label="@string/app_name" 
            android:background= "@color/white">
        </activity>
        <activity
            android:name="com.example.simonsays.android.view.PlayActivity"
            android:label="@string/title_activity_play" 
            android:background= "@color/white">
        </activity>
    </application>

</manifest>